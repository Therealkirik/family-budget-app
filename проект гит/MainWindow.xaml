<Window x:Class="FinanceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="семейный бюджет" Height="500" Width="737"
        WindowStartupLocation="CenterScreen"
        FontFamily="Britannic Bold" FontSize="14">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFB3E5FC" Offset="0"/>
            <GradientStop Color="#FFE1F5FE" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель ввода -->
        <Border Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Сумма -->
                <TextBlock Text="Сумма:" VerticalAlignment="Center" FontWeight="Bold" Grid.Column="0"/>
                <TextBox x:Name="tbСумма" Width="120" Grid.Column="1" Margin="5,0,10,0" Padding="5" BorderBrush="#FF90CAF9" BorderThickness="2"/>

                <!-- Описание -->
                <TextBlock Text="Описание:" VerticalAlignment="Center" FontWeight="Bold" Grid.Column="2"/>
                <TextBox x:Name="tbОписание" Grid.Column="3" Margin="5,0,0,0" Padding="5" BorderBrush="#FF90CAF9" BorderThickness="2"/>

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal" Grid.ColumnSpan="4" HorizontalAlignment="Left" Margin="0,50,0,0">
                    <Button Content="Добавить доход" Click="btnДобавитьДоход_Click" Width="140"
                            Background="#FF81C784" Foreground="White" FontWeight="Bold" BorderBrush="Transparent" Padding="5" Cursor="Hand" RenderTransformOrigin="0.461,1.506">
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-0.714"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                    <Button Content="Добавить расход" Click="btnДобавитьРасход_Click" Width="134"
                            Background="#FFE57373" Foreground="White" FontWeight="Bold" BorderBrush="Transparent" Padding="5" Cursor="Hand" RenderTransformOrigin="0.941,0.637" Height="25"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Суммы -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <TextBlock x:Name="lblДоходы" FontSize="16" FontWeight="Bold" Foreground="Green" Margin="15"/>
            <TextBlock x:Name="lblРасходы" FontSize="16" FontWeight="Bold" Foreground="Red" Margin="15"/>
            <TextBlock x:Name="lblОстаток" FontSize="16" FontWeight="Bold" Foreground="Blue" Margin="15"/>
        </StackPanel>

        <!-- История операций -->
        <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="10">
            <ScrollViewer>
                <StackPanel x:Name="spИстория"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
